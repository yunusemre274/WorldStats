# WorldStats Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/worldstats?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI Configuration (for AI summaries)
OPENAI_API_KEY=sk-your-openai-api-key-here

# External API Keys (optional - some APIs are free/public)
WORLD_BANK_API_URL=https://api.worldbank.org/v2
UN_DATA_API_URL=https://data.un.org/ws/rest
OECD_API_URL=https://stats.oecd.org/SDMX-JSON

# Cache TTL Configuration (in seconds)
CACHE_TTL_COUNTRY=21600
CACHE_TTL_CHARTS=43200
CACHE_TTL_COMPARISON=3600
CACHE_TTL_AI_SUMMARY=86400

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Schedule (daily at 3 AM)
CRON_SYNC_SCHEDULE="0 3 * * *"

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# Logging
LOG_LEVEL=debug
